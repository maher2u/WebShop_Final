@{
    ViewData["Title"] = "Home";
}
<style>
    .glyphicon {
        font-size: 4em;
    }
</style>

<div style="background-color:#fff;padding:3%;margin-top:3%;border-radius:5px">
    <div class="row text-center">
        <h1 style="font-size:4em;color:#44444d;">THE HOUSE OF GIFTS SHOP</h1><hr />
        <p class="text-muted">Come check out our luxury gifts</p>
        <a asp-action="Index" asp-controller="ChoosingProducts" class="btn btn-primary btn-lg">Browse our catalogue.</a>
    </div>
    <div class="container-fluid">
        <section id="about">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                    <span class="glyphicon glyphicon-ok text-primary"></span>
                    <h3>Exclusive watches</h3>
                    <p class="text-muted">We offer only luxury gifts.</p>

                </div>

                <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                    <span class="glyphicon glyphicon-plane text-primary"></span>
                    <h3>Ready to Ship</h3>
                    <p class="text-muted">We ship all over the world!</p>

                </div>

                <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                    <span class="glyphicon glyphicon-phone text-primary"></span>
                    <h3>Mobile friendly</h3>
                    <p class="text-muted">Responsive design for mobile devices.</p>

                </div>
                <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                    <span class="glyphicon glyphicon-heart text-primary"></span>
                    <h3>Made with love</h3>
                    <p class="text-muted">... luxury gifts...</p>

                </div>
            </div>
        </section>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/Images/portfolio/4.jpg" />
                    <div class="carousel-caption">
                        <h3>welcome to our gift shop</h3>
                        <p>luxury gifts</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/portfolio/cmh1855c.jpg" />
                    <div class="carousel-caption">
                        <h3>welcome to our gift shop</h3>
                        <p>luxury gifts</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/portfolio/1.jpg" style="width:100%;">
                    
                    <div class="carousel-caption">
                        <h3>welcome to our gift shop</h3>
                        <p>luxury gifts</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

       
       
        <section id="contact">
            <div class="row">

                <div class="col-md-8 col-md-offset-2 text-center">
                    <h2 class="section-heading" style="color:#428bca">Let's get in touch!</h2>
                    <hr />
                    <p>Contact us if you have any qustion!</p>
                </div>


                <div class="col-md-4 col-md-offset-2 text-center">
                    <span class="glyphicon glyphicon-phone" ></span>
                    <p style="color:#428bca">123-456-789</p>
                </div>
                <div class="col-md-4  text-center">
                    <span class="glyphicon glyphicon-envelope"></span>
                    <p><a href="email:my-email@my-mail.com">my-email@my-min.com</a></p>

                </div>
            </div>

        </section>
    </div>
</div>